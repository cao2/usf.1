<main>
	<var>
		pos[3];
		step[3];
	</var>

	Proc p0(0, pos, step);
	Proc p1(1, pos, step);
	Proc p2(2, pos, step);
</main>

<class name="Proc" arg="myValue, pos[3], step[3]">
	<const>
		NCS = 0;
		CS = 1;
		q2 = 2;	
		q3 = 3;
	</const>

	<var>
		j = 0;
		k = 0;
	</var>

	<m>
		NCS
	</m>

	<tr label="0" preset="NCS" postset="wait">
		delay(0, inf);
		j = 1;
	</tr>

	<tr label="1" preset="wait" postset="q2">
		guard(j < 3);
		delay(0, inf);
		pos[myValue] = j;
	</tr>

	<tr label="2" preset="q2" postset="q3">
		delay(0, inf);
		step[j-1] = myValue;
		k = 0;
	</tr>


